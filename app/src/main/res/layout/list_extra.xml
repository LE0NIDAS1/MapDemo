<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/list_item_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_play_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_text"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:textSize="17sp"
        android:layout_marginTop="9dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_price_text1"
        android:layout_toStartOf="@+id/compatSwitchExtra"
        android:textSize="17sp"
        android:layout_marginTop="9dp"

        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/compatSwitchExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="7dp"
        android:theme="@style/SCBSwitch"
        android:onClick="btnRemoveClick"

        />

</RelativeLayout>